<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colorAccent"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:onClick="ImageClick"
        android:background="@color/colorPrimary" />


    <EditText

        android:layout_below="@+id/imageView2"
        android:id="@+id/edittext_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:layout_marginStart="15dp"
        android:hint="Kücültme oranını"
        android:inputType="number" />
    <Button
        android:id="@+id/button_compaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:text="@string/button_one_text"
        android:layout_marginBottom="24dp"
        android:textSize="25sp"
        android:layout_marginEnd="15dp"
        android:onClick="Compress"
        android:layout_alignParentRight="true"
        />
    <Button
        android:id="@+id/button_segmentation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_compaire"
        android:text="@string/button_two"
        android:textSize="25sp"
        android:onClick="Segmantation"
        android:layout_centerHorizontal="true"
        />




</RelativeLayout>